<body>
    <div class='container'>
        <nav class='navbar navbar-expand-lg navbar-light bg-light'>

            <a class='navbar-brand'>Video Tutorials</a>
            {{#if user}}

                <ul class='navbar-nav ml-auto'>

                    <li class='nav-item'>
                        <a class='nav-link' href={{homePage user._id}}>Home </a>
                    </li>

                    <li class='nav-item'>
                        <a class='nav-link' href=''>Welcome,
                            {{user.username}}</a>
                    </li>

                    <li class='nav-item'>
                        <a
                            class='nav-link'
                            href={{logOutSrc user._id}}
                        >Logout</a>
                    </li>
                </ul>
            {{else}}
                <ul class='navbar-nav ml-auto'>

                    <li class='nav-item'>
                        <a class='nav-link' href='/'>Home </a>
                    </li>

                    <li class='nav-item'>
                        <a class='nav-link' href='/login-user'>Login</a>
                    </li>

                    <li class='nav-item'>
                        <a class='nav-link' href='/signup-user'>Register</a>
                    </li>

                </ul>

            {{/if}}
        </nav>

        <div id='notifications'>
            <div
                id='successBox'
                class='alert successBox alert-success'
                role='alert'
            >
                <p class='success-message'></p>
            </div>
            <div
                id='loadingBox'
                class='alert loadigBox alert-info'
                role='alert'
            ><p class='loading-message'></p></div>
            <div id='errorBox' class='alert alertBox alert-danger' role='alert'>
                <p class='error-message'></p>
            </div>
        </div>

        <main>
            <h1 class='text-center'>Courses</h1>
            <section>
                <a href={{sharecourse user._id}} class='btn btn-warning'>Create
                    Course</a>
                <form class='search float-right'>
                    <label>Search: </label>
                    <input type='text' />
                    <input type='submit' class='btn btn-info' value='Search' />
                </form>
            </section>
            {{#if course}}
                <div class='container mt-3'>
                    <div class='row'>
                        {{#each course}}

                            <div
                                class='card-deck d-flex justify-content-center'
                            >
                                <div class='card mb-4'>
                                    <img
                                        class='card-img-top'
                                        src={{imageUrl}}
                                        alt='Card image cap'
                                        width='400'
                                    />
                                    <div class='card-body'>
                                        <h4 class='card-title'>{{title}}</h4>
                                    </div>
                                    <div class='card-footer'>
                                        <a
                                            href={{courseDetails userId _id}}
                                        ><button
                                                type='button'
                                                class='btn btn-info'
                                            >Details</button></a>
                                        <small
                                            class='float-right'
                                        >{{createdAt}}</small>
                                    </div>
                                </div>
                            </div>
                        {{/each}}

                    </div>
                </div>
            {{else}}
                <h3 class='text-center'>No courses...</h3>
            {{/if}}
        </main>

        <footer class='page-footer font-small'>
            <div class='footer-copyright text-center py-3'>Â© 2021
                <a href='#/'>Express Fundamentals</a>
            </div>
        </footer>

    </div>
</body>
{{! </html> }}