    <nav class='navbar navbar-expand-lg navbar-light bg-light'>
        <a class='navbar-brand'>Video Tutorials</a>

        <ul class='navbar-nav ml-auto'>

            <li class='nav-item'>
                <a class='nav-link' href='/'>Home </a>
            </li>

            <li class='nav-item'>
                <a class='nav-link' href=''>Welcome, {{username}}</a>
            </li>

            <li class='nav-item'>
                <a class='nav-link' href={{logOutSrc id}}>Logout</a>
            </li>
        </ul>
    </nav>

    <section class='notifications'>
        <div id='notifications'>
            <div
                id='successBox'
                class='alert successBox alert-success'
                role='alert'
            >
                <p class='success-message'></p>
            </div>
            <div
                id='loadingBox'
                class='alert loadigBox alert-info'
                role='alert'
            ><p class='loading-message'></p></div>
            <div id='errorBox' class='alert alertBox alert-danger' role='alert'>
                <p class='error-message'></p>
            </div>
        </div>

    </section>

    <main>
        <form class='text-center border border-light p-5' action='' method=''>
            <h1>Create Course</h1>
            <div class='form-group'>
                <label for='title'>Course Title</label>
                <input
                    type='text'
                    class='form-control'
                    placeholder='Course name'
                    name='title'
                    value=''
                />
            </div>
            <div class='form-group'>
                <label for='description'>Course Description</label>
                <textarea
                    class='form-control'
                    placeholder='Description'
                    name='description'
                ></textarea>
            </div>
            <div class='form-group'>
                <label for='imageUrl'>Image url</label>
                <input
                    type='text'
                    class='form-control'
                    placeholder='Image Url'
                    name='imageUrl'
                    value=''
                />
            </div>
            <div class='form-check'>
                <input
                    type='checkbox'
                    class='form-check-input'
                    id='check-box'
                    name='isPublic'
                />
                <label class='form-check-label' for='check-box'>Public</label>
            </div>
            <button type='submit' class='btn btn-primary'>Submit</button>
            <input type='hidden' id='userId' value={{id}} />
        </form>
    </main>

